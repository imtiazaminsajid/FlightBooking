<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_two"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".PassengersAndCabinClass">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passengers"
        android:textColor="#000"
        android:textSize="17sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adults"
            android:textColor="#2d2929"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/adultsMinus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="220dp"
            android:layout_gravity="center"
            android:src="@drawable/negative" />

        <TextView
            android:id="@+id/adultsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="0"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/adultsPlus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/plus" />


    </LinearLayout>

    <View
        android:layout_width="370dp"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="#8c7c7c" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Childrens"
            android:textColor="#2d2929"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/childernMinus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="201dp"
            android:src="@drawable/negative" />

        <TextView
            android:id="@+id/childernTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="0"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/childernPlus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/plus" />


    </LinearLayout>

    <View
        android:layout_width="370dp"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="#8c7c7c" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Infants"
            android:textColor="#2d2929"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/infantsMinus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="217dp"
            android:src="@drawable/negative" />

        <TextView
            android:id="@+id/infantsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="0"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/infantsPlus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/plus" />


    </LinearLayout>

    <View
        android:layout_width="370dp"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="#8c7c7c" />

    <View
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        android:background="#645c5c" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Preferred Class"
        android:textColor="#000"
        android:textSize="17sp"
        android:textStyle="bold" />


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="4dp"
            android:layoutDirection="rtl"
            android:text="Economy"
            android:textAlignment="textStart"
            android:textSize="16sp" />

        <View
            android:layout_width="370dp"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="#8c7c7c" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="4dp"
            android:layoutDirection="rtl"
            android:text="Business"
            android:textAlignment="textStart"
            android:textSize="16sp" />

        <View
            android:layout_width="370dp"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="#8c7c7c" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="4dp"
            android:layoutDirection="rtl"
            android:text="First"
            android:textAlignment="textStart"
            android:textSize="16sp" />

        <View
            android:layout_width="370dp"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="#8c7c7c" />

    </RadioGroup>

    <Button
        android:id="@+id/passengerDoneBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/red_button_shape"
        android:text="Done"
        android:textColor="#fff"
        android:textSize="16sp" />

</LinearLayout>