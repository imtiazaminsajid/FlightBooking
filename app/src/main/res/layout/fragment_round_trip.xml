<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TripDetails.RoundTrip">

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="470dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departure And Arrival Cities"
            android:textColor="#151414"
            android:layout_marginLeft="10dp"

            />


        <android.support.v7.widget.CardView
            android:layout_width="350dp"
            android:layout_height="90dp"
            app:cardCornerRadius="10dp"
            android:elevation="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:weightSum="3"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/roundTripDepartureAirport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DAC"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dhaka"
                        />

                </LinearLayout>

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/arrow"
                    />

                <LinearLayout
                    android:id="@+id/roundTripReturnAirport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KHL"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Khulna"
                        />

                </LinearLayout>





            </LinearLayout>



        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            >

            <LinearLayout
                android:layout_width="165dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Departure Date"
                    android:textColor="#151414"

                    />

                <android.support.v7.widget.CardView
                    android:id="@+id/roundTripDepartureCV"
                    android:layout_width="160dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="20dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        >

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/departure"
                            android:layout_marginRight="15dp"
                            android:layout_gravity="center"

                            />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="50dp"
                            android:background="#716a6a"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="15dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Departure"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10 Feb 2019"
                                />

                        </LinearLayout>


                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="165dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:layout_marginLeft="25dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Return Date"
                    android:textColor="#151414"

                    />

                <android.support.v7.widget.CardView
                    android:id="@+id/roundTripReturnCV"
                    android:layout_width="160dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="20dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        >

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/departure"
                            android:layout_marginRight="15dp"
                            android:layout_gravity="center"

                            />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="50dp"
                            android:background="#716a6a"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="15dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Return"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10 Feb 2019"
                                />

                        </LinearLayout>


                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#151414"
            android:layout_marginTop="10dp"
            android:text="Select Travalers"
            />

        <android.support.v7.widget.CardView
            android:id="@+id/roundTripSelectTravalersCV"
            android:layout_width="350dp"
            android:layout_height="90dp"
            app:cardCornerRadius="10dp"
            android:elevation="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="25dp"

                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/user"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"

                    />

                <View
                    android:layout_width="2dp"
                    android:layout_height="50dp"
                    android:background="#716a6a"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Economy"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 Passenger"
                        />

                </LinearLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>


        <Button
            android:id="@+id/roundTripSearchBtn"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textColor="#fff"
            android:background="@drawable/red_button_shape"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

</FrameLayout>